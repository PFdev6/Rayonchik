<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label 'First Name' %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label 'Last Name' %>
    <%= f.text_field :last_name %>
  </div>


  <div class="actions">
    <%= f.submit "Отправить запрос", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
