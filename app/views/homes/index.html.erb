<div class="row">
  <div class="col-lg-3">
    <ul class="nav flex-column">
      <% @provinces.each do |province| %>
      <li class="nav-item">
        <a class="nav-link active" href="#">
          <%= province.name %>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <% @suggestions.each do |suggestion| %>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-primary"><%= suggestion.region.name %></strong>
            <h3 class="mb-0">
              <a class="text-dark" href="#"><%= link_to suggestion.title, active_suggestion_path(suggestion) %></a>
            </h3>
            <div class="mb-1 text-muted">Nov 12</div>
            <p class="card-text mb-auto"><%= suggestion.description&.html_safe %></p>
            <a href="#">Continue reading</a>
          </div>
          <img class="card-img-right flex-auto d-none d-md-block" data-src="" alt="<%= suggestion.title %>" style="width: 200px; height: 250px;" src="" data-holder-rendered="true">
        </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

